---
import Layout from '../layouts/Layout.astro';
import Header from "../components/Header.astro"
---

<Layout title="🌐Red Social">
    <Header/>
	<main class="text-gray-100 flex flex-col items-center justify-center h-64 w-[27rem] rounded-2xl">
        <h1 class="absolute top-10 text-sky-700 text-2xl">Inicio</h1>
        <div id="inputs" class="flex flex-col gap-2">
            <input type="text" name="texto" id="username" placeholder="Usuario" class="pl-2 w-48 rounded-2xl placeholder:text-gray-600 text-black"/>
            <input type="text" name="texto" id="password" placeholder="Contraseña" class="pl-2 w-48 rounded-2xl placeholder:text-gray-600 text-black"/>
        </div>
		<button type="button" id="botonEnviar" class="w-[35%] h-7 bg-black pl-[0.125rem] relative top-4 rounded-2xl"> Ingresar </button>
		<div id="text" class="absolute top-[12rem] text-center pl-[0.3rem]"></div>
	</main>
</Layout>
<script src="../redSocial/main.js"></script>

<style>
    main{
        background-color: #ffffff1f;
        backdrop-filter: blur(1.5px);
    }
</style>
