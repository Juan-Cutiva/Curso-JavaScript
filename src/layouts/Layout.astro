---
import '@fontsource/poppins/400.css';
import '@fontsource/poppins/500.css';
import '@fontsource/poppins/600.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{Astro.props.title}</title>
	</head>
	<body class="absolute top-0 z-[-2] flex h-screen w-screen flex-col items-center justify-center bg-[#000000] bg-[radial-gradient(#ffffff33_1px,#00091d_1px)] bg-[size:20px_20px]">
		<slot />
	</body>
	<script src="../notas/juego.js"></script>
</html>

<style>
	body {
		font-family: 'Poppins', sans-serif;
	}
	html::-webkit-scrollbar {
		overflow: hidden;
		position: relative;
		width: 100%;
		height: 100%;
	}
</style>
